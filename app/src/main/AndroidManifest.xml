<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gloovitomanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_roundedjpg"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PreferenciasActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".activities.anadir.AnadirLocalActivity" />
        <activity android:name=".activities.anadir.AnadirProductoActivity" />
        <activity android:name=".activities.modificar_borrar.FichaLocalActivity" />
        <activity android:name=".activities.modificar_borrar.FichaLineaActivity" />
        <activity android:name=".activities.modificar_borrar.FichaPedidoActivity" />
        <activity android:name=".activities.modificar_borrar.FichaUsuarioActivity" />
        <activity android:name=".activities.modificar_borrar.FichaProductoActivity" />
        <activity android:name=".activities.ListaProductosActivity" />
        <activity
            android:name=".InicioActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>